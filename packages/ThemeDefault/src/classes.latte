{layout '@layout.latte'}

{block title}{$title}{/block}

{block content}
    <h1>{$title}</h1>

    <table class="summary table table-bordered table-responsive table-striped">
        {foreach $classes as $class}
            <tr>
                <td class="name">
                    <a href="{$class|linkReflection}">{$class->getName()}</a>
                </td>
            </tr>
        {/foreach}
    </table>
{/block}
