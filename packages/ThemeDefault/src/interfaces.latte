{layout '@layout.latte'}
{var $activePage = 'interfaces'}

{block title}Interfaces{/block}

{block content}
    <h1>Interfaces</h1>

    <table class="summary table table-bordered table-responsive table-striped">
        {foreach $interfaces as $interface}
            <tr>
                <td class="name">
                    <a href="{$interface|linkReflection}">{$interface->getName()}</a>
                </td>
            </tr>
        {/foreach}
    </table>
{/block}
